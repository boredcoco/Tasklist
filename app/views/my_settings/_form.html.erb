    <%= form.number_field :color_red, class:"form-control", placeholder:"Amount of red" %>
  </div>

  <div class="field">
    <br/>
    <%= form.number_field :color_blue, class:"form-control", placeholder:"Amount of blue" %>
  </div>

  <div class="field">
    <br/>
    <%= form.number_field :color_green, class:"form-control", placeholder:"Amount of green" %>
  </div>

  <div class="actions">
    <br/>
    <%= form.submit class: "btn btn-dark", style:"background-color: #0D48A2" %>
  </div>
<% end %>
