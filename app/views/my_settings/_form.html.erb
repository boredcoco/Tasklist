<%= form_with(model: my_setting) do |form| %>
  <% if my_setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(my_setting.errors.count, "error") %> prohibited this my_setting from being saved:</h2>

      <ul>
        <% my_setting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :happiness_bar %>
    <%= form.number_field :happiness_bar, class:"form-control" %>
